                }
            }
        },
        "api.updateUserRequest": {
            "type": "object",
            "properties": {
                "email": {
                    "description": "built-in",
                    "type": "string",
                    "maxLength": 50
                },
                "full_name": {
                    "description": "custom tag",
                    "type": "string"
                },
                "password": {
                    "description": "built-in tags",
                    "type": "string",
                    "maxLength": 50,
                    "minLength": 8
                }
            }
        },
        "api.userResponse": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "full_name": {
                    "type": "string"
                },
